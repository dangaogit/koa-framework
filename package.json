{
  "name": "@dangao/koa-framework",
  "version": "0.0.3",
  "main": "dist/index.js",
  "author": "kedan",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p ./ -d --listFiles --traceResolution --extendedDiagnostics",
    "test": "jest --verbose --coverage --watchAll",
    "test:cov": "jest --coverage",
    "test:dev": "yarn test:cov --watchAll",
    "debug": "jest --verbose"
  },
  "files": [
    "dist/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/koa": "^2.11.0",
    "@types/node": "^14.0.14",
    "jest": "^26.1.0",
    "koa": "^2.11.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "./src/__test__/.*\\.jest.(js|ts|tsx)$",
    "coveragePathIgnorePatterns": [
      "<rootDir>/.*/__test__/.*",
      "node_modules",
      "coverage"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json",
        "isolatedModules": true
      }
    }
  },
  "dependencies": {
    "@dangao/date-util-es": "^0.0.4",
    "@dangao/node-log": "^0.0.7"
  }
}
